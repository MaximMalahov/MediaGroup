<Page x:Class="Малахов.reg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Малахов"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="250"
      Title="reg">

    <StackPanel Width="250">
        <TextBox Name="Login" md:HintAssist.Hint="Логин" md:HintAssist.IsFloating="True"/>
        <PasswordBox Name="Password" md:HintAssist.Hint="Пароль" md:HintAssist.IsFloating="True"/>
        <Button Click="Button_Click" Content="Зарегистрироваться" Margin="0,5" Style="{DynamicResource MaterialDesignPaperButton}"/>
    </StackPanel>
</Page>
