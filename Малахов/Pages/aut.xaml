<Page x:Class="Малахов.Pages.aut"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Малахов"
      mc:Ignorable="d" 
      d:DesignHeight="160" d:DesignWidth="200"
      VerticalAlignment="Center" HorizontalAlignment="Center"
      Title="aut" Loaded="Page_Loaded">

    <Grid>
        <StackPanel Width="200">
            <TextBox Name="Login" md:HintAssist.Hint="Логин" md:HintAssist.IsFloating="True" HorizontalContentAlignment="Center"/>
            <PasswordBox Name="Password" md:HintAssist.Hint="Пароль" md:HintAssist.IsFloating="True"  HorizontalContentAlignment="Center"/>
            <CheckBox Name="IsRemember" Content="Запомнить"/>
            <Button Click="Button_Click" Content="Вход" Margin="0,5" Style="{DynamicResource MaterialDesignPaperButton}" Cursor="Hand"/>
            <Button Click="Button_Click_1" Content="Регистрация"  Margin="0,5" Style="{DynamicResource MaterialDesignPaperButton}"/>
        </StackPanel>
    </Grid>
</Page>
